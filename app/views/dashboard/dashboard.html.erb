

<center><h1>Dashboard</h1></center>
        <% btn_count = 0 %>
        <% @loc_id.each do |tool_location| %>
          <% /^\d+$/ =~ tool_location.name ? (app = 'App. ') : (app = '')%>
            <div class="row">
                 <div class="span2">
                   <div class="span1 offset3">
                       <a class="btn btn-<%= app_annual_service?(tool_location) ? 'app' : 'annual' %>" href="/location/<%= tool_location.name %>" >
                         <%= "#{app}#{tool_location.name}" %>
                       </a>
                   </div>
                 </div>

                 <div class="span10" >


                    <% @dashboard[tool_location.id].each_slice(5) do |five_tools| %>
                       <div class="row">
                       <% five_tools.each do |tool| %>
                            <% status_link = tool.in_service ? 'Put Out of Service' : 'Put In Service' %>

                            <% button_link = "#{tool.model}"+'<br>'+"#{tool.category.name.singularize}" %>
                            <div class="btn-group" id="btn<%= tool.id %>" >

                             <a class="btn custombutton dropdown-toggle <%= btn_color(tool) %>" data-toggle="dropdown" href="#"  >
                               <%= annual_service?(tool) ? raw('<i class="icon-ok icon-white"></i>') : '' %> <%= raw(button_link) %>
                             </a>

                             <ul class="btn-dropdown-menu">
                               <li><%= link_to status_link, toggle_in_service_path(:id => tool.id), :method => :post, :remote => true %></li>
                               <li><%= link_to 'view Details', tool_path(tool.id) %></li>
                               <li>Serial: <%= tool.serial %></li>
                               <li>Condition: <%= tool.condition %></li>

                             </ul>
                           </div>
                           <% btn_count += 1 %>

                       <% end %>
                         <p></p>
                       </div>
                    <% end %>

                   <hr class="style-eight">

                 </div>
          </div>
        <% end %>


