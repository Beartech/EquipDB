 <div class="tabbable" style="margin-bottom: 18px;">
  <ul class="nav nav-tabs">

    <% @categories.each do |category| %>
      <% tabnum = @categories.index("#{category}") %>
        <li <%= tabnum == 0 ? 'class=active' : '' %>>
          <a href="#<%= tabnum %>" data-toggle="tab"><%= "#{category}" %></a>
        </li>

    <% end %>
  </ul>

  <div class="tab-content">

    <% @categories.each do |category| %>
        <% tabnum = @categories.index("#{category}") %>
        <div class="tab-pane  <%= tabnum == 0 ? 'active' : '' %>"   id="<%= tabnum %>">
            <table width="100%" id="table<%=tabnum %>" class="myadvancedtable" border="0" >
              <thead>
              <tr>
              <th> Serial </th>
              <th> Type </th>
              <th> Model </th>
              <th> Location </th>
              <th> In Service </th>
              <th> Retired </th>
              <th> Condition </th>
              </tr>
              </thead>

              <tbody>
              <% @tools.each do |tool| %>
                <% if (tool.name == category) || (category == 'all') %>
                  <tr>
                    <td><%= link_to tool.serial, tool, :class => 'btn btn-small' %></td>
                    <td><%= tool.name.singularize %></td>
                    <td><%= tool.model %></td>
                    <td><%= tool.location %></td>
                    <td><%= tool.in_service %></td>
                    <td><%= tool.retired %></td>
                    <td><%= tool.condition %></td>
                  </tr>
                <% end %>
              <% end %>
              </tbody>
            </table>
        </div>

    <% end %>
  </div>

</div>
