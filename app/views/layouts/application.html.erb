<!DOCTYPE html>
<html>
<head>
  <title>EquipDB</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">Equipment DB</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Equipment", tools_path %></li>
          <li><%= link_to "Repairs", repairs_path %></li>
          <li><%= link_to "Service", services_path %></li>
          <li><%= link_to "Parts", parts_path %></li>
          <li><%= link_to "Reports" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="span4">
    <%=  yield :role_sidebar  %>
  </div>
  <div class="span8">
    <%=  yield :role_main     %>
  </div>
</div>

<div>
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
</div>

<div id="main" role="main">
  <div class="container">
    <div class="content">
  <div class="row">
    <div class="span2">

    </div>
    <div class="span10"><%= yield %></div>
  </div>
      </div>
    </div>
</div>

<div id="navbar navbar-fixed-bottom">
  <nav class="navbar-inner">
    <div class="container">
  <% if current_user %>
      <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
      <%= link_to "Logout", :logout %>
  <% else %>
      <%= link_to "Register", new_user_path %> |
      <%= link_to "Login", :login %>
  <% end %>
    </div>
  </nav>
</div>

</body>
</html>
